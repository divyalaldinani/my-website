---
import BlogLayout from '../layouts/BlogLayout.astro';
---

<BlogLayout title="My Blog">
  <h1>Welcome to My Blog</h1>
  <p>This is where I share my thoughts and experiences.</p>
  <div class="cta">
    <a href="/blog">Read My Posts</a>
  </div>
</BlogLayout>

<style>
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .cta {
    margin-top: 2rem;
  }
  
  .cta a {
    display: inline-block;
    background: #333;
    color: white;
    padding: 0.5rem 1rem;
    text-decoration: none;
    border-radius: 4px;
  }
  
  .cta a:hover {
    background: #444;
  }
</style>